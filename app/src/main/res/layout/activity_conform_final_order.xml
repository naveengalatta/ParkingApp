<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConformFinalOrderActivity">

    <TextView
        android:id="@+id/crf_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:text="Check the details"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/crf_user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_page"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="User Details : "
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/crf_user_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_details"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Name -"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@android:color/black">
    </TextView>


    <TextView
        android:id="@+id/crf_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_details"
        android:layout_toRightOf="@+id/crf_user_name_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:hint="User Name"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_user_phone_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:text="Phone Number -"
        android:textSize="16sp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_name"
        android:layout_toRightOf="@+id/crf_user_phone_number_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:hint="Phone number"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/crf_user_vehicle_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_phone_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:text="Vehicle Number -"
        android:textSize="16sp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_user_vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_phone_number"
        android:layout_toRightOf="@+id/crf_user_vehicle_number_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:hint="Vehicle number"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/crf_user_booking_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_vehicle_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:text="Booking Date -"
        android:textSize="16sp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_user_booking_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_vehicle_number"
        android:layout_toRightOf="@+id/crf_user_booking_date_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:hint="Booking date"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/crf_user_no_of_hours_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crf_user_booking_date"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:text="Number of Hours -"
        android:textSize="16sp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_user_no_of_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crf_user_booking_date"
        android:layout_toRightOf="@+id/crf_user_no_of_hours_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:hint="No of Hours"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/crf_user_total_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crf_user_no_of_hours"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:text="Total Amount -"
        android:textSize="16sp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_user_total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crf_user_no_of_hours"
        android:layout_toRightOf="@+id/crf_user_total_amount_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:hint="Total Amount"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/crf_parking_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crf_user_total_amount"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Parking Details : "
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/crf_product_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/crf_parking_details"
        android:layout_marginTop="10dp"
        android:text="Parking Center Name -"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/crf_parking_details"
        android:layout_toRightOf="@+id/crf_product_name_title"
        android:layout_marginTop="10dp"
        android:hint="Parking Area Name"
        android:textSize="16sp"
        android:padding="5dp">
    </TextView>

    <TextView
        android:id="@+id/crf_product_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/crf_product_name"
        android:text="Vehicle Type -"
        android:textStyle="normal"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/crf_product_category_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/crf_product_name"
        android:hint="Category"
        android:textStyle="normal"
        android:textSize="16sp"
        android:padding="5dp">
    </TextView>

    <TextView
        android:id="@+id/crf_product_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/crf_product_category"
        android:text="Price per Hour -"
        android:textStyle="normal"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/crf_product_price_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/crf_product_category"
        android:hint="Price"
        android:textStyle="normal"
        android:textSize="16sp"
        android:padding="5dp">
    </TextView>

    <TextView
        android:id="@+id/crf_product_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/crf_product_price"
        android:text="Address -"
        android:textStyle="normal"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:id="@+id/crf_product_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/crf_product_address_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/crf_product_price"
        android:text="Address"
        android:textStyle="normal"
        android:textSize="16sp"
        android:padding="5dp">
    </TextView>


    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="7dp"
        android:background="@color/colorPrimary"
        android:text="Confirm Booking"
        android:textSize="18sp"
        android:textStyle="bold">
    </Button>

</RelativeLayout>