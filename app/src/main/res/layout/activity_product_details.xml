<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">


    <TextView
        android:id="@+id/selected_booking_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have selected to book the below slot"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        >
    </TextView>

    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking Area Name"
        android:layout_below="@+id/selected_booking_slot"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>


    <TextView
        android:id="@+id/product_category_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_details"
        android:text="Category"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/product_category_details"
        android:layout_marginTop="2dp"
        android:text="Charges for an Hour - "
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_category_details"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:text="price"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/product_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_details"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:text="Address"
        android:textStyle="normal"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/conform_layout_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/product_address_details"
        android:text="Enter the details"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>

    <EditText
        android:id="@+id/vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/conform_layout_heading"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:hint="Vehicle number">
    </EditText>

    <EditText
        android:id="@+id/booking_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle_number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:hint="Booking date"
        android:inputType="date">
    </EditText>


    <EditText
        android:id="@+id/no_of_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_date"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:hint="Duration of parking in hours"
        android:inputType="number">
    </EditText>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pd_add_to_cart_btn"
        android:layout_toRightOf="@+id/total_price_name_apd"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:padding="4dp"
        android:textSize="22sp"
        android:textStyle="bold|italic">
    </TextView>

    <TextView
        android:id="@+id/total_price_name_apd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pd_add_to_cart_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:padding="4dp"
        android:textSize="22sp"
        android:textStyle="bold|italic">
    </TextView>

    <Button
        android:id="@+id/pd_add_to_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Click here to continue"
        android:textAllCaps="false"
        android:padding="15dp"
        android:textSize="16sp">
    </Button>


</RelativeLayout>